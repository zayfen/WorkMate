{
  "name": "workmate",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Electron + Vue3 + TypeScript + Vite + Router with Vitest scaffold",
  "main": "dist-electron/main/index.cjs",
  "scripts": {
    "dev": "vite",
    "dev:all": "yarn dev",
    "build": "vite build",
    "build:electron": "vite build --config vite.electron.config.ts",
    "preview": "vite preview",
    "start": "electron dist-electron/main/index.cjs",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "rebuild:native:node": "npm rebuild better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:install": "playwright install",
    "e2e:web": "yarn build && playwright test -c playwright.config.ts",
    "e2e:electron": "yarn build && yarn build:electron && playwright test -c playwright.electron.config.ts",
    "dist": "yarn build && yarn build:electron && electron-builder -mwl",
    "dist:mac": "yarn build && yarn build:electron && electron-builder --mac dmg",
    "dist:win": "yarn build && yarn build:electron && electron-builder --win nsis",
    "dist:linux": "yarn build && yarn build:electron && electron-builder --linux deb",
    "test": "yarn rebuild:native:node && vitest run",
    "test:watch": "yarn rebuild:native:node && vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chart.js": "4.4.4",
    "vue": "^3.4.38",
    "vue-advanced-chat": "^2.1.0",
    "vue-chartjs": "5.3.1",
    "vue-datepicker-next": "1.0.2",
    "vue-router": "^4.4.3",
    "vue-toastification": "^2.0.0-rc.5",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.12",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "30.5.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.0.5",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.workmate.app",
    "productName": "WorkMate",
    "asar": true,
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "directories": {
      "buildResources": "build"
    }
  }
}
